<div class="row-fluid">
  <h2><%=@user.email%></h2>
  <div class="clearfix"/>
  <div class="span6"%>
    <dl class="dl-horizontal">
      <dt>邮件地址:</dt>
      <dd><%=@user.email%></dd>

      <dt>用户名:</dt>
      <dd><%=@user.name%></dd>

      <dt>注册时间:</dt>
      <dd><%=@user.created_at%></dd>

      <dt>管理员:</dt>
      <dd><%=@user.admin%></dd>

    </dl>

  </div>

  <div class="span6"%>
    <dl class="dl-horizontal">
      <dt>登陆次数:</dt>
      <dd><%=@user.sign_in_count%></dd>

      <dt>最后登录时间:</dt>
      <dd><%=@user.last_sign_in_at%></dd>

      <dt>最后登陆IP:</dt>
      <dd><%=@user.last_sign_in_ip%></dd>

    </dl>
  </div>

</div>