<div class="row span6 offset3 ">
  <h2>登陆</h2>

  <%= simple_form_for(resource, :as => resource_name ,:url => session_path(resource_name),html: { class: 'form login-form' } ) do |f| %>
      <%=f.input "email" -%>
      <%=f.input "password" -%>

    <div class="actions">
      <%= f.submit "登陆" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>