<%= @episode.errors.full_messages.first if @episode.errors.any? %>

<div>
  <%= form_for @episode do |f| %>
    <div class="field">
      <label for="name">Name</label>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <label for="permalink">Permalink</label>
      <%= f.text_field :permalink %>
    </div>

    <div class="field">
      <label for="description">Description</label>
      <%= f.text_area :description, rows: 3, cols: 80 %>
    </div>

    <div class="field">
      <label for="notes">Notes</label>
      <%= f.text_area :notes, rows: 20, cols: 80, id: 'notes_edit' %>
    </div>

    <div class="field">
      <label for="still">Still</label>
      <% if @episode.still.present? %>
        <%= image_tag @episode.still.url %>
      <% end %>
      <%= f.file_field :still %>
    </div>

    <div class="field">
      <label for="duration">URL(当视频放在其他位置时，需要指定)</label>
      <%= f.text_field :video_url %>
    </div>

    <div class="field">
      <label for="duration">URL for download(如果在线播放和下载链接不同时请指定)</label>
      <%= f.text_field :download_url %>
    </div>

    <div class="field">
      <label for="duration">Seconds</label>
      <%= f.text_field :seconds %>
    </div>

    <div class="field">
      <label for="allow_download">Allow download</label>
      <%= f.check_box :allow_download %>
    </div>

    <div class="field">
      <label for="allow_comment">Allow comment</label>
      <%= f.check_box :allow_comment %>
    </div>

    <div class="field">
      <label for="publish">Publish</label>
      <%= f.check_box :publish %>
    </div>

    <div class="field">
      <label for="publish">Tags</label>
      <%= f.text_field :tag_list, placeholder: 'Seperated by comma' %>
    </div>

    <div class="field">
      <label for="publish">Election</label>
      <%= f.select :election_id, options_for_select(Election.pluck(:name, :id), @episode.election_id), { include_blank: true } %>
    </div>

    <%= f.submit %>


  <% end %>

</div>
